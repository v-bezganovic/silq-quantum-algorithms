import bitLength, random;

BITMAX := 32;

def generateSubset[arr_len : !â„•, k : !â„•](arr : !â„•^arr_len) : !â„•^k{
	subset := vector(k, 0:!â„•);
	len_bits := bitLength(arr_len);

	i := 0;
	while i < k {
		element_index := randomInt(len_bits) as uint[len_bits]; 
		element_index_meas := measure(element_index);
		inSubset := false : !B;
		for j in [0..k){ inSubset = inSubset || arr[element_index_meas] == subset[j]}
		if !(inSubset) { subset[i] = arr[element_index_meas]; i = i + 1; }
  	}

    return subset;
} 

def generateLists[k : !â„•](subset : !â„•^k, cF : !â„• !-> !â„•) : (!â„•^k x !â„•^k){
	output_list := vector(k, 0:!â„•);
	input_list := vector(k, 0:!â„•);

	for i in [0..k){
		output_list[i] = cF(subset[i]);
		input_list[i] = subset[i];
  	}

	return (output_list, input_list);
}

def checkDoubles[k : !â„•](output_list : !â„•^k, input_list : !â„•^k) : (!â„• x !â„•){
	grovers_item := 0 : !â„•;
	for i in [0..k){
		for j in [i+1..k){
			if output_list[j] == output_list[i] && input_list[j] != input_list[i]{
				return (input_list[i], input_list[j]);
			} 
		}
	}
	return (0, 0);
}

def generateClassical[bitmax : !â„•](f : const uint[bitmax] !->lifted uint[bitmax]){
	return Î»(x :!N) { return f(x as !uint[bitmax]) as !â„• };
}

// Modified from Source: https://github.com/eth-sri/silq.git
def grover[n:!â„•, arr_len : !â„•](f: const uint[n] !â†’ lifted ğ”¹, marks :!â„•):!â„•{
	nIterations:=floor(Ï€ * sqrt(arr_len/marks)/4);
	cand:=0:uint[n];
    for k in [0..n){ cand[k]:=H(cand[k]); }
	for k in [0..nIterations){
		if f(cand){ phase(Ï€); }
		cand:=groverDiffusion(cand);
	}
	return measure(cand) as !â„•;
}

// Source: https://github.com/eth-sri/silq.git
def groverDiffusion[n:!â„•](cand:uint[n])mfree: uint[n]{
	for k in [0..n) { cand[k] := H(cand[k]); }
	if cand!=0{ phase(Ï€); }
	for k in [0..n) { cand[k] := H(cand[k]); }
	return cand;
}

def collisionDetection[arr_len : !â„•, bitmax :!â„•](array : !â„•^arr_len, r : !â„•, F : const uint[bitmax] !->lifted uint[bitmax]){
	// Set cardinality of a random subset
	len_bits := bitLength(arr_len);
	// Use standard calculation of k for r-to-1 function; if r < 2, pick randomly
    if r < 2 { k := measure(randomInt(len_bits)) as !â„•; }
	else { k := ceil((arr_len)^(1/3)) coerce !â„•; }

	// Generate random subset
	subset := generateSubset[arr_len, k](array);
	
	// Generate output list
	cF := generateClassical(F);
	(output_lists, input_lists) := generateLists(subset, cF);
	print(input_lists, output_lists);										// DEBUG

	// Collision elements
	collision1 := 0 : !â„•;
	collision2 := 0 : !â„•;

	if (checkDoubles(output_lists, input_lists) == (0, 0)){			// Collision not detected upon initial observation
		print(1);												// DEBUG

		// Define oracle for collision detection
    	oracleH := Î»(const idx : uint[len_bits]) lifted : ğ”¹ {
			if idx >= arr_len { return false : ğ”¹; }
			anc := 2^bitmax - 1 as uint[bitmax];
			for i in [0..arr_len){ if idx == i { anc = F(array[i] coerce uint[bitmax]); }}
			out := false : ğ”¹;
			for i in [0..k) { if idx == i {out = out | (anc == output_lists[i] & array[i] != input_lists[i] )}}
    	    return out
    	};

		if r < 2 { t := 1; }
		else{ t := (r - 1)*k coerce !â„•; }

		// Solution detection through Grover's search 
		pending_solution_index := grover[len_bits, arr_len](oracleH, t) : !â„•;

		if pending_solution_index < arr_len {
			print(pending_solution_index);
			for i in [0..k){
				if cF(array[pending_solution_index]) == cF(input_lists[i]) && array[pending_solution_index] != input_lists[i] {
					collision1 = array[pending_solution_index];
					collision2 = input_lists[i];
				} 
			}
		}
	}
	else {
		print(2);												// DEBUG
		double := checkDoubles(output_lists, input_lists);
		collision1 = double[0];
		collision2 = double[1];
	}

	return (collision1, collision2);
}

